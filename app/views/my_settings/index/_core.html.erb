
<%= form_with(model: user.my_settings, method: :patch, id: dom_id(user.my_settings), class: ['row', 'g1']) do |form| %>
  <div class="col-md-11">
    <%= BROWN_ZAIBATSU %>
  </div>

  <div class="col-md-1">
    &nbsp;
  </div>

  <div class="col-md-3">
    <%= form.label "Username" %>
    <%= form.text_field :zaibatsu_username, class: ['form-control', 'zis-valid'] %>
    <!--
    <div class="valid-feedback">
      Looks good!
    </div>
    -->
  </div>
  <div class="col-md-3">
    <%= form.label "Password" %>
    <%= form.text_field :zaibatsu_password, class: ['form-control', 'zis-valid'] %>
    <!--
    <div class="valid-feedback">
      Looks good!
    </div>
    -->
  </div>

  <div class="col-md-3">
    &nbsp;
  </div>







  <div class="col-md-12 mt-4">
    <%= BROWN_DUFRENITE %>
  </div>






  <div class="col-md-3">
    <%= form.label "Username" %>
    <%= form.text_field :dufrenite_username, class: ['form-control', 'zis-valid'] %>
    <!--
    <div class="valid-feedback">
      Looks good!
    </div>
    -->
  </div>
  <div class="col-md-3">
    <%= form.label "Password" %>
    <%= form.text_field :dufrenite_password, class: ['form-control', 'zis-valid'] %>
    <!--
    <div class="valid-feedback">
      Looks good!
    </div>
    -->
  </div>

  <div class="col-md-3">
    &nbsp;
  </div>


  <div class="col-md-12 mt-4">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
<% end %>

